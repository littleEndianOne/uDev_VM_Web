{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,        
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "outDir": "build",       
    },
    "include": [
        "src/**/*",
        "src/test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}