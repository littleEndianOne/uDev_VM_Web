{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": true,    
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "outDir": "build"
       },    
    "include": [
        "src/**/*",
        "src/test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}