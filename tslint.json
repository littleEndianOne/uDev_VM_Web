{
    "extends": "tslint:recommended",   
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "max-classes-per-file":false,
        "variable-name": [true,
            "check-format",
            "allow-leading-underscore"
        ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}